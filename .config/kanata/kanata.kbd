(defcfg
  process-unmapped-keys yes
  log-layer-changes no

  linux-dev-names-include (
    "AT Translated Set 2 keyboard"
    "Bluetooth Keyboard"
    "Logitech Wireless Keyboard PID:4023"
  )
)

(defsrc
  esc
  caps
)

(defalias
  caps_dual (tap-hold 200 200 esc lctl)
)

(deflayer base
  caps
  @caps_dual
)

